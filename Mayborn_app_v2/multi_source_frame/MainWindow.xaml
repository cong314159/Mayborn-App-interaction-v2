<Window x:Class="multi_source_frame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:multi_source_frame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Image Name="displayStream" />

        <Button Content="Color" Name="ColorStreamButton" Click="ColorStreamButton_Click" Margin="100,915,0,0" />

        <Button Content="Infrared" Name="InfraredStreamButton" Click="InfraredStreamButton_Click" Margin="180,915,0,0" />

        <Button Content="Depth" Name="DepthStreamButton" Click="DepthStreamButton_Click" Margin="260,915,0,0" />

    </Grid>
</Window>
